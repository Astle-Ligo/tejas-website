{{!-- eventHeadDashboard.hbs --}}
<section class="py-20 px-6 bg-beige text-bistre min-h-screen flex justify-center items-center">
    <div class="bg-white p-8 shadow-lg rounded-lg max-w-md w-full">
        <h2 class="text-3xl font-bold text-coffee text-center mb-6 font-handwritten">Login</h2>

        {{#if loginError}}
        <p class="text-red-600 text-center mb-4 font-handwritten">{{loginError}}</p>
        {{/if}}

        <form action="/eventHead/eventHead-login" method="post" class="space-y-4">
            <div>
                <label class="block font-semibold font-handwritten">Email Address</label>
                <input type="email" name="Email" class="w-full p-2 border border-khaki rounded"
                    placeholder="Enter Email" required>
            </div>
            <div>
                <label class="block font-semibold font-handwritten">Password</label>
                <input type="password" name="Password" class="w-full p-2 border border-khaki rounded"
                    placeholder="Password" required>
            </div>
            <button type="submit"
                class="w-full py-2 bg-coffee text-beige font-bold rounded-lg hover:bg-bistre transition font-handwritten">
                Login
            </button>
        </form>
    </div>
</section>