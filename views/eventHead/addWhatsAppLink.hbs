<section class="py-20 px-6 bg-beige text-bistre min-h-screen flex justify-center items-center">
    <div class="container mx-auto max-w-lg bg-white p-8 shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold text-coffee text-center mb-6 font-handwritten">
            Add WhatsApp Group Link
        </h2>

        <p class="text-center text-lg text-bistre font-handwritten">
            Event: <strong>{{event.eventName}}</strong>
        </p>

        <form action="/eventHead/addWhatsAppLink/{{event._id}}" method="POST" class="mt-6 space-y-4">
            <div>
                <label class="block mb-2 font-bold font-handwritten">WhatsApp Group Link:</label>
                <input type="url" name="whatsappLink" required placeholder="https://chat.whatsapp.com/..."
                    class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-green-500">
            </div>
            {{#if event.whatsappLink}}
            <p class="text-green-600 text-center font-bold bg-green-100 p-2 rounded-md shadow-md">
                ✅ Group Link added successfully!
            </p>
            {{else}}
            <p class="text-red-600 text-center font-bold bg-red-100 p-2 rounded-md shadow-md">
                ⚠️ Add Group Link!
            </p>
            {{/if}}

            <button type="submit"
                class="w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition duration-200">
                Save Link
            </button>
        </form>
    </div>
</section>