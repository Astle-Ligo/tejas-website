<section class="py-20 px-6 bg-beige text-bistre min-h-screen">
    <div class="container mx-auto max-w-5xl">
        <h2 class="text-3xl font-bold text-coffee text-center mb-8 font-handwritten">My Event Results</h2>

        {{#if results.length}}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {{#each results}}
            <div class="bg-white shadow-lg rounded-lg p-6">
                <h3 class="text-xl font-semibold text-coffee mb-2">{{this.eventName}} ({{this.eventSubName}})</h3>

                {{! First Place }}
                <div class="mb-3">
                    <h4 class="text-green-700 font-semibold">1st Place</h4>
                    {{#if this.firstPlace.length}}
                    <ul class="mt-1">
                        {{#each this.firstPlace}}
                        <li class="flex items-center bg-green-100 px-3 py-2 rounded-md mb-1">
                            <span class="text-sm font-bold bg-green-300 px-2 py-1 rounded-md">#{{inc @index}}</span>
                            <span class="ml-2">{{#if (eq this.type "individual")}}{{this.participant.name}}
                                ({{this.classId}}){{else}}{{this.teamName}} ({{this.classId}}){{/if}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}<p class="text-gray-500">No winner</p>{{/if}}
                </div>

                {{! Second Place }}
                <div class="mb-3">
                    <h4 class="text-blue-700 font-semibold">2nd Place</h4>
                    {{#if this.secondPlace.length}}
                    <ul class="mt-1">
                        {{#each this.secondPlace}}
                        <li class="flex items-center bg-blue-100 px-3 py-2 rounded-md mb-1">
                            <span class="text-sm font-bold bg-blue-300 px-2 py-1 rounded-md">#{{inc @index}}</span>
                            <span class="ml-2">{{#if (eq this.type "individual")}}{{this.participant.name}}
                                ({{this.classId}}){{else}}{{this.teamName}} ({{this.classId}}){{/if}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}<p class="text-gray-500">No winner</p>{{/if}}
                </div>

                {{! Third Place }}
                <div class="mb-3">
                    <h4 class="text-orange-700 font-semibold">3rd Place</h4>
                    {{#if this.thirdPlace.length}}
                    <ul class="mt-1">
                        {{#each this.thirdPlace}}
                        <li class="flex items-center bg-orange-100 px-3 py-2 rounded-md mb-1">
                            <span class="text-sm font-bold bg-orange-300 px-2 py-1 rounded-md">#{{inc @index}}</span>
                            <span class="ml-2">{{#if (eq this.type "individual")}}{{this.participant.name}}
                                ({{this.classId}}){{else}}{{this.teamName}} ({{this.classId}}){{/if}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}<p class="text-gray-500">No winner</p>{{/if}}
                </div>

                <div class="flex justify-end space-x-2 mt-4">
                    <a href="/eventHead/delete-result/{{this._id}}"
                        class="px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition"
                        onclick="return confirm('Are you sure you want to delete the results for {{this.eventName}}?');">
                        Delete
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</section>