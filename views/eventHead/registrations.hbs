<section class="py-20 px-6 bg-beige text-bistre min-h-screen">
    <div class="container mx-auto max-w-5xl bg-white p-8 shadow-lg rounded-lg">
        <h2 class="text-3xl font-bold text-coffee text-center mb-6 font-handwritten">
            Event Registrations for {{eventDetails.eventName}}
        </h2>
        <div class="flex justify-end">
            <a href="/eventHead/{{eventDetails._id}}/on-spot">
                <button class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                    On Spot Registrations
                </button>
            </a>
        </div>
        <h3 class="text-lg text-center text-bistre mb-4 font-handwritten">
            {{eventDetails.eventDate}}
        </h3>

        {{#if registrations.length}}

        {{#if (eq eventDetails.eventStrength "individual")}}

        <div class="overflow-x-auto">
            <table class="w-full border border-khaki text-left">
                <thead class="bg-coffee text-beige">
                    <tr>
                        <th class="p-3 border-b">#</th>
                        <th class="p-3 border-b">Name</th>
                        <th class="p-3 border-b">Reg. Number</th>
                        <th class="p-3 border-b">Class</th>
                        <th class="p-3 border-b">Phone</th>
                        <th class="p-3 border-b">Send Invitation</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each registrations}}
                    <tr class="border-b {{#if (mod @index 2)}}bg-gray-100{{/if}}">
                        <td class="p-3">{{inc @index}}</td>
                        <td class="p-3">{{name}}</td>
                        <td class="p-3">{{regNum}}</td>
                        <td class="p-3">{{class}}</td>
                        <td class="p-3">{{phone}}</td>
                        <td class="p-3">
                            <a href="https://wa.me/{{phone}}?text={{encodeURI (concat  
  'Hey ' name '! ðŸ‘‹'
  'Congratulations on registering for ' ../eventDetails.eventName ' at Tejas \'25! ðŸŽ‰ '
  'To stay updated with important announcements, schedules, and event details, please join our official WhatsApp group using the link below: '
 )}}{{../eventDetails.whatsappLink}}" target="_blank"
                                class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                                Send
                            </a>





                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{else}}

        <div class="overflow-x-auto">
            <table class="w-full border border-khaki text-left">
                <thead class="bg-coffee text-beige">
                    <tr>
                        <th class="p-3 border-b">#</th>
                        <th class="p-3 border-b">Team Name</th>
                        <th class="p-3 border-b">Members</th>
                        <th class="p-3 border-b">Class</th>
                        <th class="p-3 border-b">Contact</th>
                        <th class="p-3 border-b">Send Invitation</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each registrations}}
                    <tr class="border-b {{#if (mod @index 2)}}bg-gray-100{{/if}}">
                        <td class="p-3">{{inc @index}}</td>
                        <td class="p-3 font-bold">{{teamName}}</td>
                        <td class="p-3">
                            {{#each teamMembers}}
                            {{this.name}} ({{this.regNum}}) <br>
                            {{/each}}
                        </td>
                        <td class="p-3">{{class}}</td>
                        <td class="p-3">{{contact.teamPhone}} / {{contact.altPhone}}</td>
                        <td class="p-3">
                            <a href="https://wa.me/{{contact.teamPhone}}?text={{encodeURI (concat    'Hey Team ' teamName '! ðŸ‘‹ '  'Congratulations on registering for ' ../eventDetails.eventName ' at Tejas \'25! ðŸŽ‰ '
  'To stay updated with important announcements, schedules, and event details, please join our official WhatsApp group using the link below: '
 )}}{{../eventDetails.whatsappLink}}" target="_blank"
                                class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                                Send
                            </a>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{/if}}

        {{else}}
        <p class="text-center text-muted">No registrations yet.</p>
        {{/if}}
    </div>
</section>