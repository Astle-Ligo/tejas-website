<section id="schedule" class="py-20 px-6 bg-chamoisee text-beige relative">
    <div class="container mx-auto relative z-10">
        <div class="section-title">
            <h2 class="text-4xl md:text-5xl font-bold mb-16 text-beige text-center hand-drawn">
                Festival Schedule
            </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {{#each eventsByDate}}
            <div class="schedule-card">
                <div class="schedule-day">Day {{inc @index}}</div>
                <div class="schedule-date">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="inline mr-2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    {{this.date}}
                </div>
                {{!-- <div class="schedule-location">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="inline mr-2">
                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                </div> --}}
                <ul class="mt-6 space-y-4">
                    {{#each this.events}}
                    <li class="schedule-item">
                        <span class="time">{{this.time}}</span>
                        <span class="location">{{../location}}</span>
                        <span class="event">{{this.name}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </div>
</section>