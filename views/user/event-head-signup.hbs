{{!-- eventHeadSignup.hbs --}}
<section class="py-20 px-6 bg-beige text-bistre flex justify-center items-center min-h-screen">
    <div class="bg-white p-8 shadow-lg rounded-lg max-w-lg w-full">
        <h2 class="text-3xl font-bold text-coffee text-center mb-6 font-handwritten">Create Event Head</h2>
        <form action="/event-head-signup" method="post" class="space-y-4">
            <div>
                <label class="block font-semibold">Name</label>
                <input type="text" name="Name" class="w-full p-2 border border-khaki rounded" placeholder="Enter Name"
                    required>
            </div>
            <div>
                <label class="block font-semibold">Register Number</label>
                <input type="text" name="regNum" class="w-full p-2 border border-khaki rounded"
                    placeholder="Enter Register Number" required>
            </div>
            <div>
                <label class="block font-semibold">Event(s)</label>
                <div class="space-y-2">
                    {{#each events}}
                    <div class="flex items-center gap-2">
                        <input type="checkbox" name="events" value="{{this._id}}" id="event-{{this._id}}"
                            class="form-checkbox border-khaki">
                        <label for="event-{{this._id}}">{{this.eventName}}</label>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div>
                <label class="block font-semibold">Email Address</label>
                <input type="email" name="Email" class="w-full p-2 border border-khaki rounded"
                    placeholder="Enter Email" required>
            </div>
            <div>
                <label class="block font-semibold">Phone Number</label>
                <input type="tel" name="phoneNumber" class="w-full p-2 border border-khaki rounded"
                    placeholder="Enter Phone" required>
            </div>
            <div>
                <label class="block font-semibold">Password</label>
                <input type="password" name="Password" class="w-full p-2 border border-khaki rounded"
                    placeholder="Password" required>
            </div>
            <button type="submit"
                class="w-full py-2 bg-coffee text-beige font-bold rounded-lg hover:bg-bistre transition">Sign
                Up</button>
        </form>
    </div>
</section>