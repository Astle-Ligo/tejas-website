<section id="events" class="py-20 px-6 bg-beige relative">
    <div class="container mx-auto relative z-10">
        <div class="section-title">
            <h2 class="text-4xl md:text-5xl font-bold mb-16 text-coffee text-center hand-drawn">
                Events
            </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {{#each events}}
            <a href="events/{{this._id}}">
                <div class="event-card bg-white shadow-lg rounded-lg overflow-hidden h-[400px] flex flex-col">
                    <img class="w-full h-48 object-cover" src="{{this.eventImageUrl}}" alt="{{this.eventName}}">
                    <div class="p-2 w-full">
                        <h3 class="text-2xl font-bold mb-1\.5 text-coffee">{{this.eventName}}</h3> {{#if
                        this.eventSubName}}<span class="text-sm">({{this.eventSubName}})</span>{{/if}}

                        <!-- Event Date -->
                        <div class="flex items-center mt-4 text-bistre">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="inline mr-2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span>{{this.formattedDate}}</span>
                        </div>

                        <!-- Venue -->
                        <div class="flex items-center mt-2 text-bistre">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="inline mr-2">
                                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            <span>{{this.venue}}</span>
                        </div>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>

    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
        <div class="absolute top-1/4 left-1/3 transform -translate-x-1/2 -translate-y-1/2">
            <div class="hopscotch-grid opacity-10"></div>
        </div>
        <div class="absolute bottom-1/4 right-1/3 transform translate-x-1/2 translate-y-1/2">
            <div class="tic-tac-toe-grid opacity-10"></div>
        </div>
    </div>
</section>