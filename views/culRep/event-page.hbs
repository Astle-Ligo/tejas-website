<section class="center">
    <div class="card" style="width: 70rem;">
        <img src="{{event.eventImageUrl}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{event.eventName}} {{#if event.eventSubName}} <span>
                    ({{event.eventSubName}}) </span>{{/if}}</h5>
            <p class="card-text">{{event.description}}</p>
            <div class="card-details-box">
                <p>Strength : {{event.eventStrength}} </p>
                {{#if (eq event.eventStrength "group")}}
                <p> {{#if event.minParticipants}} {{event.minParticipants}} - {{/if}} {{event.maxParticipants}} in a
                    group</p>
                {{/if}}
                <p>Max Reg From a Class : {{event.classReg}} </p>
                <p>Time Limit : {{event.timeLimit}} </p>
                <p>Event Head : {{event.eventHead}} </p>
                <p>Event Head Contact : {{event.eventHeadContact}} </p>
                <p>Date : {{event.eventDate}} </p>
            </div>

            {{#if canRegister}}
            <a href="/culRep/register-event/{{event._id}}" class="btn btn-success buttons">Register</a>
            {{else}}
            <button class="btn btn-secondary" disabled>You have already Registered</button>
            {{/if}}

        </div>
    </div>
</section>