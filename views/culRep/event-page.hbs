{{!-- eventDetails.hbs --}}
<section class="py-20 px-6 bg-beige text-bistre flex justify-center items-center min-h-screen">
    <div class="bg-white p-8 shadow-lg rounded-lg max-w-4xl w-full">
        <img src="{{event.eventImageUrl}}" class="w-full h-64 object-cover rounded-lg mb-6" alt="Event Image">
        <h2 class="text-3xl font-bold text-coffee text-center">{{event.eventName}}
            {{#if event.eventSubName}}
            <span class="text-lg">({{event.eventSubName}})</span>
            {{/if}}
        </h2>
        <p class="text-center text-bistre mt-2">{{event.description}}</p>
        <div class="mt-6 space-y-2 text-center">
            <p><strong>Strength:</strong> {{event.eventStrength}}</p>
            {{#if (eq event.eventStrength "group")}}
            <p><strong>Group Size:</strong> {{#if event.minParticipants}}{{event.minParticipants}} -
                {{/if}}{{event.maxParticipants}}</p>
            {{/if}}
            <p><strong>Max Registrations from a Class:</strong> {{event.classReg}}</p>
            <p><strong>Time Limit:</strong> {{event.timeLimit}}</p>
            <p><strong>Event Venue:</strong> {{event.venue}}</p>
            <p><strong>Event Head:</strong> {{event.eventHead}}</p>
            <p><strong>Event Head Contact:</strong> {{event.eventHeadContact}}</p>
            <p><strong>Date:</strong> {{event.eventDate}}</p>
        </div>
        <div class="mt-6 flex justify-center">
            {{#if canRegister}}
            <a href="/culRep/register-event/{{event._id}}"
                class="px-4 py-2 bg-green-600 text-beige font-bold rounded-lg hover:bg-green-700 transition">Register</a>
            {{else}}
            <button class="px-4 py-2 bg-gray-400 text-white font-bold rounded-lg cursor-not-allowed" disabled>You have
                already Registered</button>
            {{/if}}
        </div>
    </div>
</section>