{{!-- eventList.hbs --}}
<section class="py-20 px-6 bg-beige text-bistre">
    <h1 class="text-4xl font-bold text-coffee text-center mb-6">Event Details</h1>
    <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {{#each events}}
        <a href="events/{{this._id}}"
            class="block bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition">
            <img src="{{this.eventImageUrl}}" alt="Event Image" class="w-full h-48 object-cover">
            <div class="p-4 text-center">
                <h5 class="text-xl font-bold text-coffee">
                    {{this.eventName}}
                    {{#if this.eventSubName}}<span class="text-sm">({{this.eventSubName}})</span>{{/if}}
                </h5>
                <p class="text-bistre">Date: {{this.eventDate}}</p>
            </div>
        </a>
        {{/each}}
    </div>
</section>