<section class="culRepDashboard-section">
    <h1 class="culRepDashboard-header">Event Details</h1>
    <div class="culRepDashboard-container container">
        <div class="culRepDashboard-cardBox">
            {{#each events}}
            <a href="culRep/events/{{this._id}}" class="culRepDashboard-eventLink">
                <div class="culRepDashboard-card">
                    <img src="{{this.eventImageUrl}}" class="culRepDashboard-cardImg" alt="Event Image">
                    <div class="culRepDashboard-cardBody">
                        <h5 class="culRepDashboard-cardTitle">
                            {{this.eventName}}
                            {{#if this.eventSubName}}
                            <span>({{this.eventSubName}})</span>
                            {{/if}}
                        </h5>
                        <p class="culRepDashboard-cardText">Date: {{this.eventDate}}</p>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</section>

<style>
    /* General Styling */
    .culRepDashboard-header {
        text-align: center;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
    }

    .culRepDashboard-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Card Box */
    .culRepDashboard-cardBox {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    /* Event Card */
    .culRepDashboard-eventLink {
        text-decoration: none;
        color: inherit;
    }

    .culRepDashboard-card {
        width: 15rem;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .culRepDashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
    }

    /* Event Image */
    .culRepDashboard-cardImg {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    /* Event Body */
    .culRepDashboard-cardBody {
        text-align: center;
        padding: 15px;
    }

    .culRepDashboard-cardTitle {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .culRepDashboard-cardText {
        font-size: 0.9rem;
        color: #666;
    }

    /* Responsive Layout */
    @media (max-width: 768px) {
        .culRepDashboard-card {
            width: 12rem;
        }
    }

    @media (max-width: 576px) {
        .culRepDashboard-card {
            width: 100%;
        }
    }
</style>