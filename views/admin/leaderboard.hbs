<div class="flex flex-col items-center mt-20">
    <h2 class="text-5xl font-extrabold text-gray-900 tracking-wide mb-8 font-handwritten">
        üèÜ Leaderboard
    </h2>

    <div class="w-full max-w-4xl mx-auto space-y-6 m-8">
        {{#each leaderboardData}}
        <div class="relative flex items-center justify-between px-10 py-6 bg-white shadow-lg rounded-2xl 
                    transition-transform duration-300 ease-in-out transform hover:scale-105 
                    {{#ifCond @index 0}} border-4 border-yellow-400 shadow-xl {{else}} 
                    {{#ifCond @index 1}} border-4 border-gray-400 shadow-md {{else}} 
                    {{#ifCond @index 2}} border-4 border-orange-500 shadow-sm {{else}} 
                    border border-gray-200 {{/ifCond}}{{/ifCond}}{{/ifCond}}">

            <!-- Position Badge -->
            <!-- Position Badge (Smaller & Better Aligned) -->
            <div class="absolute left-[-10px] top-1/2 transform -translate-y-1/2 px-4 py-2 rounded-full text-white text-base font-bold 
            {{#ifCond @index 0}} bg-yellow-500 {{else}} 
            {{#ifCond @index 1}} bg-gray-500 {{else}} 
            {{#ifCond @index 2}} bg-orange-600 {{else}} 
            bg-gray-300 {{/ifCond}}{{/ifCond}}{{/ifCond}}">
                {{inc @index}}
            </div>


            <!-- Class Name -->
            <div class="flex-1 text-xl font-semibold text-gray-900 text-center">
                {{classId}}
            </div>

            <!-- Medal Counts with Better Spacing -->
            <div class="flex gap-14 text-center">
                <div class="w-20">
                    <div class="text-3xl font-bold text-yellow-500">{{firstPlace}}</div>
                    <div class="text-sm text-gray-600">ü•á First</div>
                </div>
                <div class="w-20">
                    <div class="text-3xl font-bold text-gray-400">{{secondPlace}}</div>
                    <div class="text-sm text-gray-600">ü•à Second</div>
                </div>
                <div class="w-20">
                    <div class="text-3xl font-bold text-orange-500">{{thirdPlace}}</div>
                    <div class="text-sm text-gray-600">ü•â Third</div>
                </div>
            </div>

            <!-- Total Points with Extra Space -->
            <div class="text-3xl font-bold text-green-700 min-w-[80px] text-center ml-6 w-20">
                {{totalPoints}}
                <div class="text-sm text-gray-600">Total points</div>

            </div>
        </div>
        {{/each}}
    </div>
</div>