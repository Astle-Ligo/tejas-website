<section class="admin-section page">
    <div class="container-fluid">
        <h2 class="text-center">Add an Event</h2>
        <form action="/admin/add-event" method="post" enctype="multipart/form-data" class="form">

            <div class="form-object">
                <label for="eventName" class="formLabel">Event Name : </label>
                <input type="text" name="eventName" class="form-control">
            </div>

            <div class="form-object">
                <label for="eventSubName" class="formLabel">Event Sub Name : </label>
                <input type="text" name="eventSubName" class="form-control">
            </div>

            <div class="form-object">
                <label for="eventImageUrl" class="formLabel">Event Image URL : </label>
                <input type="text" name="eventImageUrl" class="form-control">
            </div>

            <div class="form-object">
                <label for="description" class="formLabel">Description :</label>
                <textarea name="description" rows="4" class="form-control"></textarea>
            </div>

            <div class="form-object">
                <label for="eventStrength" class="formLabel">Participation Strength : </label>
                <select name="eventStrength" id="eventStrength" class="form-control" onchange="toggleGroupFields()">
                    <option value="individual">Individual</option>
                    <option value="group">Group</option>
                </select>
            </div>

            <!-- Min & Max input fields (Initially Hidden) -->
            <div id="groupFields" style="display: none; margin-top: 10px;">
                <div class="form-object">
                    <label for="minParticipants" class="formLabel">Min Participants :</label>
                    <input type="number" name="minParticipants" id="minParticipants" class="form-control"
                        placeholder="Min Participants">
                </div>

                <div class="form-object">
                    <label for="maxParticipants" class="formLabel">Max Participants :</label>
                    <input type="number" name="maxParticipants" id="maxParticipants" class="form-control"
                        placeholder="Max Participants">
                </div>
            </div>

            <div class="form-object">
                <label for="classReg" class="formLabel">Registrations from a class :</label>
                <select name="classReg" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="unlimited">Unlimited</option>
                </select>
            </div>

            <div class="form-object">
                <label for="timeLimit" class="formLabel">Time Limit</label>
                <input type="text" name="timeLimit" class="form-control">
            </div>

            <div class="form-object">
                <label for="eventHead" class="formLabel">Event Head</label>
                <input type="text" name="eventHead" class="form-control">
            </div>

            <div class="form-object">
                <label for="eventHeadContact" class="formLabel">Event Head Contact</label>
                <input type="number" name="eventHeadContact" class="form-control">
            </div>

            <div class="form-object">
                <label for="eventDate" class="formLabel">Date</label>
                <input type="date" name="eventDate" class="form-control">
            </div>

            <button class="btn btn-success form-control" type="submit">Submit</button>
        </form>
    </div>
</section>

<script>
    function toggleGroupFields() {
        let selection = document.getElementById("eventStrength").value;
        let groupFields = document.getElementById("groupFields");

        if (selection === "group") {
            groupFields.style.display = "block"; // Show fields
        } else {
            groupFields.style.display = "none"; // Hide fields
        }
    }
</script>