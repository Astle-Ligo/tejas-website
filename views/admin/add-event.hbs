<section class="addEvent-section">
    <div class="addEvent-container">
        <h2 class="addEvent-title">Add an Event</h2>
        <form action="/admin/add-event" method="post" enctype="multipart/form-data" class="addEvent-form">

            <div class="addEvent-form-group">
                <label for="eventName" class="addEvent-label">Event Name:</label>
                <input type="text" name="eventName" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="eventSubName" class="addEvent-label">Event Sub Name:</label>
                <input type="text" name="eventSubName" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="eventImageUrl" class="addEvent-label">Event Image URL:</label>
                <input type="text" name="eventImageUrl" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="description" class="addEvent-label">Description:</label>
                <textarea name="description" rows="4" class="addEvent-input"></textarea>
            </div>

            <div class="addEvent-form-group">
                <label for="eventStrength" class="addEvent-label">Participation Strength:</label>
                <select name="eventStrength" id="eventStrength" class="addEvent-input" onchange="toggleGroupFields()">
                    <option value="individual">Individual</option>
                    <option value="group">Group</option>
                </select>
            </div>

            <div id="groupFields" class="addEvent-groupFields">
                <div class="addEvent-form-group">
                    <label for="minParticipants" class="addEvent-label">Min Participants:</label>
                    <input type="number" name="minParticipants" id="minParticipants" class="addEvent-input">
                </div>

                <div class="addEvent-form-group">
                    <label for="maxParticipants" class="addEvent-label">Max Participants:</label>
                    <input type="number" name="maxParticipants" id="maxParticipants" class="addEvent-input">
                </div>
            </div>

            <div class="addEvent-form-group">
                <label for="classReg" class="addEvent-label">Registrations from a class:</label>
                <select name="classReg" class="addEvent-input">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="unlimited">Unlimited</option>
                </select>
            </div>

            <div class="addEvent-form-group">
                <label for="timeLimit" class="addEvent-label">Time Limit:</label>
                <input type="text" name="timeLimit" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="venue" class="addEvent-label">Venue :</label>
                <input type="text" name="venue" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="eventHead" class="addEvent-label">Event Head:</label>
                <input type="text" name="eventHead" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="eventHeadContact" class="addEvent-label">Event Head Contact:</label>
                <input type="tel" name="eventHeadContact" class="addEvent-input">
            </div>

            <div class="addEvent-form-group">
                <label for="eventDate" class="addEvent-label">Date:</label>
                <input type="date" name="eventDate" class="addEvent-input">
            </div>

            <button class="addEvent-button" type="submit">Submit</button>
        </form>
    </div>
</section>

<script>
    function toggleGroupFields() {
        let selection = document.getElementById("eventStrength").value;
        let groupFields = document.getElementById("groupFields");

        if (selection === "group") {
            groupFields.style.display = "block";
        } else {
            groupFields.style.display = "none";
        }
    }
</script>