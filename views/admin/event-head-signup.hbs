<section class="admin-section">
    <div class="row">
        <div class="col">
            <div class="container-fluid">
                <h2 class="text-center">Create Event Head</h2>
                <form action="/admin/event-head-signup" method="post">

                    <div class="form-group">
                        <label for="">Name</label>
                        <input type="text" name="Name" class="form-control" placeholder="Enter Name" id="name">
                    </div>

                    <div class="form-group">
                        <label for="">Register Number</label>
                        <input type="text" name="regNum" class="form-control" placeholder="Enter Register Number"
                            id="regNum">
                    </div>

                    <div class="form-group">
                        <label for="">Event(s)</label>
                        <div class="form-group">
                            {{#each events}} <!-- Handlebars template to loop through events -->
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="events" value="{{this._id}}"
                                    id="event-{{this._id}}">
                                <label class="form-check-label" for="event-{{this._id}}">{{this.eventName}}</label>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="">Email Address</label>
                        <input type="email" name="Email" class="form-control" placeholder="Enter Email" id="email">
                    </div>

                    <div class="form-group">
                        <label for="">Phone Number</label>
                        <input type="number" name="phoneNumber" class="form-control" placeholder="Enter Phone"
                            id="phoneNumber">
                    </div>

                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Password"
                            id="password">
                    </div>

                    <button type="submit" class="btn btn-primary float-right">SignUp</button>
                </form>
            </div>
        </div>
    </div>
</section>