<section class="py-20 px-6 bg-beige text-bistre">
    <div class="container mx-auto max-w-6xl bg-white p-8 shadow-lg rounded-lg">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-4xl font-bold text-coffee text-center w-full font-handwritten">Event Details</h1>
            <a href="add-event" class="bg-coffee text-beige px-6 py-2 rounded-lg shadow-md hover:bg-bistre focus:outline-none 
                focus:ring-2 focus:ring-coffee transition text-center inline-flex items-center whitespace-nowrap">
                Add Event
            </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {{#each events}}
            <a href="events/{{this._id}}" style="text-decoration: none;">
                <div
                    class="block bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition transform hover:scale-105">
                    <img src="{{this.eventImageUrl}}" alt="{{this.eventName}}" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h5 class="text-xl font-bold text-coffee font-handwritten">{{this.eventName}}
                            {{#if this.eventSubName}}
                            <span class="text-sm text-bistre font-handwritten">({{this.eventSubName}})</span>
                            {{/if}}
                        </h5>

                        <!-- Aligning icons & text in a single row -->
                        <div class="flex items-center justify-between text-sm mt-2 font-handwritten">
                            <div class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="text-coffee">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                <p>{{this.eventTime}}</p>
                            </div>

                            <div class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="text-coffee">
                                    <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                <p>{{this.venue}}</p>
                            </div>

                            <div class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="text-coffee">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                <p>{{this.eventDate}}</p>
                            </div>
                        </div>

                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</section>