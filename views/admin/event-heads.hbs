{{!-- eventHeadsList.hbs --}}
<section class="py-20 px-4 bg-beige text-bistre">
    <div class="container mx-auto w-full bg-white p-8 shadow-lg rounded-lg">
        <h2 class="text-3xl font-bold text-coffee text-center mb-6 font-handwritten">Event Heads List</h2>
        <div class="overflow-x-auto">
            <table class="w-full border border-khaki text-left">
                <thead class="bg-coffee text-beige">
                    <tr>
                        <th class="p-3 border-b">#</th>
                        <th class="p-3 border-b">Name</th>
                        <th class="p-3 border-b">Reg Number</th>
                        <th class="p-3 border-b">Email</th>
                        <th class="p-3 border-b">Phone Number</th>
                        <th class="p-3 border-b">Event Date</th>
                        <th class="p-3 border-b">Events</th>
                        <th class="p-3 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each eventHeads}}
                    <tr class="border-b">
                        <td class="p-3">{{inc @index}}</td>
                        <td class="p-3">{{this.Name}}</td>
                        <td class="p-3">{{this.regNum}}</td>
                        <td class="p-3">{{this.Email}}</td>
                        <td class="p-3">{{this.phoneNumber}}</td>
                        <td class="p-3">
                            {{#each this.eventDetails}}
                            <span class="bg-khaki text-bistre px-2 py-1 rounded-lg">{{this.date}}</span><br>
                            {{/each}}
                        </td>
                        <td class="p-3">
                            {{#each this.eventDetails}}
                            <span class="bg-green-600 text-beige px-2 py-1 rounded-lg">{{this.name}}</span><br>
                            {{#if this.subName}}<span class="text-sm">({{this.subName}})</span>{{/if}}<br>
                            {{/each}}
                        </td>
                        <td class="p-3">
                            <a href="/admin/delete-eventHead/{{this._id}}"
                                class="bg-red-600 text-beige px-3 py-1 rounded-lg hover:bg-red-700 transition"
                                onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>