<div class="container mt-4">
    <h2 class="text-center">Event Heads List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Reg Number</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Event Date</th>
                <th>Events</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each eventHeads}}
            <tr>
                <td>{{inc @index}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.regNum}}</td>
                <td>{{this.Email}}</td>
                <td>{{this.phoneNumber}}</td>
                <td>
                    {{#each this.eventDetails}}
                    <span class="badge bg-secondary">{{this.date}}</span><br>
                    {{/each}}
                </td>
                <td>
                    {{#each this.eventDetails}}
                    <span class="badge bg-success">{{this.name}}</span><br>
                    {{/each}}
                </td>
                <td>
                    <a href="/admin/delete-eventHead/{{this._id}}" class="btn btn-danger buttons"
                        onclick="return confirm('Do you want to delete {{this.Name}}? ')">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>